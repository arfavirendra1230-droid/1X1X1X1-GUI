coroutine.wrap(LVNKEN_fake_script)()
local function CDSQDSY_fake_script() -- TextButton.LocalScript 
	local script = Instance.new('LocalScript', TextButton)

	wait()
	script.Parent.Text = "Fire All Remote"
	
	script.Parent.MouseButton1Click:connect(function()
		local Players = game:GetService("Players")
		local LocalPlayer = Players.LocalPlayer
	
		local searchRoots = {
			game:GetService("ReplicatedStorage"),
			workspace,
			game:GetService("StarterPlayer"),
		}
	
		local function gatherRemoteEvents()
			local remotes = {}
			local function scan(parent)
				for _, child in pairs(parent:GetChildren()) do
					if child:IsA("RemoteEvent") then
						table.insert(remotes, child)
					end
	
					if #child:GetChildren() > 0 then
						scan(child)
					end
				end
			end
			for _, root in ipairs(searchRoots) do
				if root then scan(root) end
			end
			return remotes
		end
	
		local remotes = gatherRemoteEvents()
		if #remotes == 0 then
			warn("No remote")
			return
		end
	
		print("SafeRemoteTester: Found "..tostring(#remotes).." RemoteEvent")
	
	
		local sampleParams = {
			"test-string",
			123,
			{x = 1, y = 2},
		}
	
	
		for i, remote in ipairs(remotes) do
			-- info
			local path = remote:GetFullName()
			print(("SafeRemoteTester: (%d/%d) %s"):format(i, #remotes, path))
	
			local ok, err = pcall(function()
				-- FireServer hanya valid di LocalScript; FireServer menerima vararg
				remote:FireServer(unpack(sampleParams))
			end)
			if not ok then
				warn(("SafeRemoteTester: %s â€” %s"):format(path, tostring(err)))
			else
				print(("SafeRemoteTester: %s"):format(path))
			end
			wait(0.2) 
		end
	
	
		wait()
		print("Fired")
	end)
end
coroutine.wrap(CDSQDSY_fake_script)()
local function QTZOC_fake_script() -- Frame.LocalScript 
	local script = Instance.new('LocalScript', Frame)

	local UIS = game:GetService("UserInputService")
	local frame = script.Parent
	
	local dragToggle = nil
	local dragSpeed = 0.25
	local dragStart = nil
	local startPos = nil
	
	local function updateInput(input)
		local delta = input.Position - dragStart
		local position = UDim2.new(startPos.X.Scale,startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
		game:GetService("TweenService"):Create(frame, TweenInfo.new(dragSpeed), {Position = position}):Play()
	end
	
	frame.InputBegan:Connect(function(input)
		if (input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch) then
			dragToggle = true
			dragStart = input.Position
			startPos = frame.Position
			input.Changed:Connect(function()
				if input.UserInputState == Enum.UserInputState.End then
					dragToggle = false
				end
			end)
		end
	end)
	
	UIS.InputChanged:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
			if dragToggle then
				updateInput(input)
			end
		end
	end)
end
coroutine.wrap(QTZOC_fake_script)()
